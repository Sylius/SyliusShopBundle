{% set variant = hookable_metadata.context.variant %}
{% set product = hookable_metadata.context.product %}

<td>
    {{ variant.name|default(variant.descriptor) }}
    {% if product.hasOptions() %}
        <div>
            {% for optionValue in variant.optionValues %}
                <div>
                    {{ optionValue.value }}
                </div>
            {% endfor %}
        </div>
    {% endif %}
</td>
