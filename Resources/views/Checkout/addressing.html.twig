{% extends '@SyliusShop/Layout/checkout.html.twig' %}

{% form_theme form 'SyliusUiBundle:Form:theme.html.twig' %}

{% block content %}
    {% include '@SyliusShop/Checkout/_steps.html.twig' %}
    <div class="ui stackable grid">
        <div class="eleven wide column">
            <div class="ui segment">
                {{ form_start(form, {'action': path('sylius_shop_checkout_addressing'), 'attr': {'class': 'ui form', 'novalidate': 'novalidate'}}) }}
                <input type="hidden" name="_method" value="PUT" />

                {% include '@SyliusShop/Checkout/Form/_addressing.html.twig' %}

                <div class="ui hidden divider"></div>
                <button type="submit" class="ui large primary icon labeled button"><i class="arrow right icon"></i> {{ 'sylius.ui.next'|trans }}</button>
                {{ form_row(form._token) }}
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
        <div class="five wide column">
            {% include '@SyliusShop/Checkout/_summary.html.twig' with { 'order': order } %}
        </div>
    </div>
{% endblock %}
