<div id="sylius-shipping-address">
    {% if form.customer.email is defined %}
        <div class="one field" id="apiLogin">
            {{ form_row(form.customer.email) }}
            <div class="ui action input" id="apiToggleable">
                <a class="ui blue labeled icon button" href="#">
                    <i class="user icon"></i>
                    {{ 'sylius.ui.sign_in'|trans }}
                </a>
                <div class="inline field">
                    <input type="password" placeholder="{{ 'sylius.ui.password'|trans }}">
                    <div class="ui left pointing red basic label">
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    {% include '@SyliusShop/Checkout/Form/_address.html.twig' with {'form': form.shippingAddress, 'order': order} %}
    {{ form_row(form.differentBillingAddress, {'attr': {'data-toggles': 'sylius-billing-address'}}) }}
</div>

<div id="sylius-billing-address">
    <div class="ui hidden divider"></div>
    <h3 class="ui dividing header">{{ 'sylius.ui.billing_address'|trans }}</h3>
    {% include '@SyliusShop/Checkout/Form/_address.html.twig' with {'form': form.billingAddress, 'order': order} %}
</div>
