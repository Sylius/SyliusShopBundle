{% for association in product.associations %}
    <h4 class="ui horizontal section divider header">{{ association.type.name }}</h4>
    {{ render(url('sylius_shop_partial_associated_products', {'id': association.id, 'template': '@SyliusShop/Product/Show/_association.html.twig'})) }}
{% else %}
    <h4 class="ui horizontal section divider header">{{ 'sylius.ui.latest_products'|trans }}</h4>
    {{ render(url('sylius_shop_partial_product_index_latest', {'count': 4, 'template': '@SyliusShop/Product/Partial/_simpleIndex.html.twig'})) }}
{% endfor %}
