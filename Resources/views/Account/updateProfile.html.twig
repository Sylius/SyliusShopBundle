{% extends 'SyliusShopBundle:Layout:main.html.twig' %}

{% block content %}
    <div class="ui padded segment">
        <form action="{{ path('sylius_shop_account_profile_update') }}" {{ form_enctype(form) }} method="POST" class="ui form">
            <h4 class="ui dividing header">{{ 'sylius.ui.edit_your_personal_information'|trans }}</h4>

            <div class="two fields">
                <div class="field">{{ form_row(form.firstName) }}</div>
                <div class="field">{{ form_row(form.lastName) }}</div>
            </div>
            <div class="field">{{ form_row(form.email) }}</div>
            <div class="two fields">
                <div class="field">{{ form_row(form.birthday) }}</div>
                <div class="field">{{ form_row(form.gender) }}</div>
            </div>
            <div class="field">{{ form_row(form.phoneNumber) }}</div>

            {{ form_widget(form._token) }}

            <button type="submit" class="ui large primary button">{{ 'sylius.ui.save_changes'|trans }}</button>
        </form>
    </div>
{% endblock %}
