<div class="ui pointing dropdown link item" id="currency-selector">
    <span class="text active-currency">{{ activeCurrencyCode }}</span>
    <i class="dropdown icon"></i>
    <div class="menu">
        {% for availableCurrencyCode in availableCurrenciesCodes %}
            {% if availableCurrencyCode is not sameas(activeCurrencyCode) %}
                <a href="{{ path('sylius_shop_switch_currency', {'code': availableCurrencyCode}) }}" class="item available-currency">
                    {{ availableCurrencyCode }}
                </a>
            {% endif %}
        {% endfor %}
    </div>
</div>
