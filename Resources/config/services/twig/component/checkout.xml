<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service
            id="sylius_shop.twig.component.checkout.address.form"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Checkout\Address\FormComponent"
        >
            <argument type="service" id="sylius.context.customer" />
            <argument type="service" id="sylius.repository.shop_user" />
            <argument type="service" id="sylius.repository.address" />
            <argument type="service" id="form.factory" />
            <argument>Sylius\Bundle\ShopBundle\Form\Type\Checkout\AddressType</argument>

            <tag
                name="sylius.live_component"
                key="sylius_shop:checkout:address:form"
                template="@SyliusShop/checkout/address/form.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.checkout.address.address_book"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Checkout\Address\AddressBookComponent"
        >
            <argument type="service" id="sylius.context.customer" />

            <call method="setLiveResponder">
                <argument type="service" id="ux.live_component.live_responder"/>
            </call>

            <tag
                name="sylius.live_component"
                key="sylius_shop:checkout:address:address_book"
                template="@SyliusShop/checkout/address/form/addresses/address/address_book.html.twig"
            />
        </service>

        <service
            id="sylius_shop.twig.component.checkout.shipping_step.form"
            class="Sylius\Bundle\ShopBundle\Twig\Component\Checkout\ShippingStepFormComponent"
        >
            <argument type="service" id="form.factory" />
            <argument>Sylius\Bundle\CoreBundle\Form\Type\Checkout\SelectShippingType</argument>

            <tag
                name="sylius.live_component"
                key="sylius_shop:checkout:select_shipping:form"
                template="@SyliusShop/checkout/select_shipping/form.html.twig"
            />
        </service>
    </services>
</container>
